%h2 
  Applications
  %span.heading-suffix
    = link_to "Create", new_application_url
    %i.fa.fa-plus-square-o  

.applications  
  - @apps.each do |app|
    .application.rounded_box
      %h3.title 
        %i.fa.fa-square-o  
        = link_to app.name, application_url(app)
      .url
        %strong URL :
        = link_to app.url, app.url if app.url
      .registry
        %strong Registry : 
        = link_to app.docker_registry.name, docker_registry_url(app.docker_registry)
      .repository
        %strong Repository :
      .ci
        %strong CI :
      .stages
        %strong Stage Containers




